generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique  // Will be hashed
  username      String   @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  salaries      Salary[]
  role          Role     @default(USER)
}

model Salary {
  id         String   @id @default(cuid())
  amount     Int
  salaryType String   @default("net")
  position   String
  company    String
  experience Int      // years of experience
  location   String
  source     String   @default("SELF") // "SELF" or "OTHER"
  sourceNote String? // This means it can be `null`
  rangeMin   Int
  rangeMax   Int
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
} 